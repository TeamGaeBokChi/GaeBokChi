<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.itwill.gaebokchi.repository.UserDao">

    <select id="selectByUserid" resultType="User">
        select * from users where userid = #{userid}
    </select>

    <!-- 닉네임 중복 체크! -->
    <select id="selectByNickname" resultType="User">
        select * from users where nickname = #{nickname}
    </select>

    <update id="update">
        update users
        set password = #{password}
        , nickname = #{nickname}
        , phone = #{phone}
        , address = #{address}
        , account = #{account}
        where userid = #{userid}
    </update>

    <insert id="insert">
        insert into pros (id)
        values (#{tmp})
    </insert>
    
    <select id="selectPointsByUserid" resultType="Point">
        
    </select>

    <select id="selectProByUserid" resultType="Pro">
        select * from users u, pros p where u.userid = #{userid} and u.license = p.id;
    </select>
    
</mapper>